{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Goodfood API",
        "description": "",
        "license": {
            "name": "MIT",
            "url": "http://opensource.org/licenses/MIT"
        }
    },
    "tags": [
        {
            "name": "message",
            "description": "Everything about message"
        }
    ],
    "paths": {
        "/message": {
            "post": {
                "tags": [
                    "message"
                ],
                "summary": "post message",
                "description": "發送訊息到 Slack（Monospace）。",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "security": [
                    {
                        "api_key": []
                    }
                ],
                "parameters": [
                    {
                        "name": "message",
                        "in": "formData",
                        "required": true,
                        "type": "string",
                        "description": "請使用 `x-www-form-urlencoded` 來傳資料。"
                    },{
                        "name": "channel",
                        "in": "formData",
                        "required": false,
                        "type": "string",
                        "description": "指定傳送的頻道，若不填預設為 `#test_bot`。"
                    },{
                        "name": "botname",
                        "in": "formData",
                        "required": false,
                        "type": "string",
                        "description": "指定 bot 名稱，若不填預設為 goodfood_bot。"
                    },{
                        "name": "iconurl",
                        "in": "formData",
                        "required": false,
                        "type": "string",
                        "description": "指定 bot 大頭貼名稱，若不填預設為 http://goodfood-beta.trunksys.com/images/sushi.jpg"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Message"
                        }
                    },
                    "400": {
                        "description": "Parameters Error"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        }
    },
    "definitions": {
        "Message": {
            "type": "object",
            "properties": {
                "ok": {
                    "type": "boolean"
                }
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "in": "header",
            "name": "Authorization"
        }
    },
    "host": "goodfood-beta.trunksys.com",
    "basePath": "/",
    "schemes": [
        "http"
    ]
}
