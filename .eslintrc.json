{
    "extends": "airbnb-base",
    "rules": {
        "max-len": [
            "error",
            {
                "code": 200,
                "ignoreComments": true,
                "ignoreUrls": true
            }
        ],
        "indent": ["error", 4],
        "require-jsdoc": [
            "error",
            {
                "require": {
                    "FunctionDeclaration": false,
                    "MethodDefinition": false,
                    "ClassDeclaration": false,
                    "ArrowFunctionExpression": false,
                    "FunctionExpression": false
                }
            }
        ],
        "no-console": "warn",
        "no-param-reassign": ["error", { "props": false }],
        "no-underscore-dangle": "off",
        "linebreak-style": "off",
        "skipTemplates": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "jest": true
    }
}
