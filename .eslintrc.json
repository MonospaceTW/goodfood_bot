{
    "extends": "airbnb-base",
    "rules": {
        "max-len": [
            "error",
            {
                "code": 200,
                "ignoreComments": true,
                "ignoreUrls": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "require-jsdoc": [
            "error",
            {
                "require": {
                    "FunctionDeclaration": false,
                    "MethodDefinition": false,
                    "ClassDeclaration": false,
                    "ArrowFunctionExpression": false,
                    "FunctionExpression": false
                }
            }
        ],
        "no-console": "warn",
        "linebreak-style": 0,
        "no-unused-vars": 1,
        "camelcase": 0,
        "object-curly-newline": 1,
        "arrow-body-style": 0,
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-underscore-dangle": "off",
        "skipTemplates": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "jest": true
    }
}